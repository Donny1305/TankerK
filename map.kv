#:import MapView kivy_garden.mapview.MapView

<MapViewTanker>:
	MapView:
		id: tankerMap
		lat: root.lat
		lon: root.lon
		zoom: root.zoom

<MDBottomNavigation>:
    #panel_color: "#eeeaea"
    selected_color_background: "green"
    text_color_active: "lightgrey"

<SettingsLayout>:
	BoxLayout:
		orientation: "vertical"
		Image:
			source: "images/tankericon.png"
		#BoxLayout:
			#orientation: "horizontal"
			#spacing: 10
			#padding: 10
			#TextInput:
				#hint_text: "PLZ"
				#multiline: False
				#size_hint_y: None
				#height: 30
			#Label:
				#text: "-ODER-"
				#size_hint_y: None
				#height: 30
				#color: 0, 0, 0, 1
			#Button:
				#size_hint_y: None
				#height: 30
				#background_color: 0, 0, 0, 0

				#Image:
					#source: "images/marker.png"
					#center_x: self.parent.center_x
					#center_y: self.parent.center_y
					#size_hint_y: None
					#height: 30
		BoxLayout:
			orientation: "horizontal"
			padding: 50
			spacing: 10
			Button:
				id: fuelMenu
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				size_hint: (1, .3)
				background_color: (0/255, 105/255, 168/255, 1)
				background_normal: ""
				text: "Spritsorte"
				on_release: root.fuelDropdown()
			Button:
				id: radiusMenu
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				size_hint: (1, .3)
				background_color: (0/255, 105/255, 168/255, 1)
				background_normal: ""
				text: "Radius"
				on_release: root.radiusDropdown()
			Button:
				id: saveSettings
				pos_hint: {"center_x": 0.5, "center_y": 0.5}
				size_hint: (1, .3)
				background_color: (94/255, 165/255, 0/255, 1)
				background_normal: ""
				text: "Speichern"
				on_release: root.saveSettings()